@import "../styles/fa.wxss";

.habit {
  border-bottom: 1px solid lightcyan;
  display: flex;
}

.name {
  flex: 0 0 160px;
}

.habit .records {
  width: 100%;
}

.habit .records .new-record {
  text-align: center;
  width: 100%;
  background-color: cyan;
}

.habit .records .record {
  display: flex;
  border-bottom: 1px solid lightcyan;
}

.habit .records .record .value{
  flex: 1;
}

.habit .records .record .action {
  flex: 0 0 60px;
  text-align: center;
}

.habit .records .record .action.del {
  color: lightcoral;
}

.habit .records .record .action.add {
  color: gray;
}

#header {
  width: 100%;
  display: flex;
  background-color: #ECFAFB;
  padding: 0.2rem 0;
}

#header #prev,#next {
  text-align: center;
  flex: 0 0 80px;
}

#header #date {
  flex: 1;
  text-align: center;
}